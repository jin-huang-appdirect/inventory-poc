{
  "name": "inventory",
  "version": "1.0.0",
  "description": "inventory service",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint src test --ext=.js,.ts",
    "lint:fix": "eslint --fix src e2e --ext=.js,.ts",
    "start": "nodemon src/index.ts",
    "test": "jest"
  },
  "keywords": [
    "inventory"
  ],
  "author": "jin.huang",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(test|e2e)/.*\\.(test|e2e)\\.(ts|js)$",
    "moduleDirectories": [
      "<rootDir>/node_modules"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/test",
      "<rootDir>/e2e"
    ],
    "watchPathIgnorePatterns": [
      ".idea"
    ],
    "transform": {
      "^.\\.ts$": "ts-jest"
    }
  },
  "resolutions": {
    "ts-invariant": "^0.6.0"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@apollo/federation": "^0.13.2",
    "@types/uuid": "^8.0.1",
    "apollo-datasource-mongodb": "^0.2.1",
    "apollo-server": "^2.15.0",
    "apollo-server-caching": "^0.5.2",
    "apollo-server-plugin-base": "^0.10.1",
    "apollo-tracing": "^0.11.4",
    "bson": "^1.1.5",
    "express": "latest",
    "graphql-playground-middleware-express": "^1.7.22",
    "mongodb": "3.6.3",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^6.8.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.2",
    "ts-jest": "^26.4.4"
  }
}
